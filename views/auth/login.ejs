<% layout('../layouts/app') %>
<% stylesheet(asset_path('css/animate.min.css')) -%>

<!-- Home Page body section start -->
<section class="vh-100">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <% if(typeof success!=='undefined'){ %>
            <div class="alert alert-success animate__animated animate__bounceIn"><%=success%></div>
            <% } %>
            <% if(typeof error!=='undefined'){ %>
            <div class="alert alert-danger animate__animated animate__shakeX"><%=error%></div>
            <% } %>
            <div class="card shadow-2-strong rounded">
                <div class="card-body p-5 text-center">        
                    <h3 class="mb-5 fw-bold text-theme">Sign In</h3>
                    <form  action="<%=url('login')%>" method="post">
                        <input type="hidden" name="_token" value="<%=csrfToken%>" />
                        <!-- Email -->
                        <div data-mdb-input-init class="form-outline mt-4">
                            <input 
                                type="email" 
                                id="email" 
                                name="email"  
                                class="form-control form-control-lg"
                                value="<%= typeof data!=='undefined'? data.email:'' %>"
                                required
                            />
                            <label 
                                class="form-label" 
                                for="email">
                                Email <sup class="text-danger">*</sup>
                            </label>
                        </div>
                        <% if(typeof email!=='undefined'){ %>
                        <div class="text-danger text-start"><%=email.msg%></div>
                        <% } %>

                        <!-- Password -->
                        <div data-mdb-input-init class="form-outline mt-4">
                            <i class="fas fa-eye trailing pointer pe-auto show_password" data-id="password"></i>
                            <input 
                                type="password" 
                                id="password"
                                name="password" 
                                class="form-control form-control-lg form-icon-trailing"
                                required
                                
                            />
                        
                            <label 
                                class="form-label" 
                                for="password">
                                Password <sup class="text-danger">*</sup>
                            </label>
                            
                        </div>
                        <% if(typeof password!== 'undefined'){ %>
                        <div class="text-danger text-start"><%=password.msg%></div>
                        <% } %>
                        

                        <div class="d-flex justify-content-between mt-4">
                            <div class="form-check">
                                <input 
                                    class="form-check-input" 
                                    type="checkbox" 
                                    id="remember" 
                                    name="remember" 
                                />
                                <label 
                                    class="form-check-label" 
                                    for="remember"> 
                                    Remember 
                                </label>
                            </div>
                            <div>
                                <a href="<%=url('password/reset')%>" class="text-theme">Forgot Password</a>
                            </div>
                        </div>
                        <!-- Submit -->
                        <button data-mdb-ripple-init 
                            class="btn btn-theme btn-lg btn-block text-light mt-4" type="submit" >
                            <i class="fa-solid fa-right-to-bracket"></i> Login
                        </button>
                    </form>

                    <hr class="my-4">
                    <div>
                        <p class="mb-0">
                            Don't have an account? 
                            <a href="<%=url('register')%>" class="text-theme fw-bold">Sign Up</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
      </div>
    </div>
</section>
<!-- Home Page body section end -->




