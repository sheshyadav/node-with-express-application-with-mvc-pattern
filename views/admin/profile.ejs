<% layout('../layouts/app') %>

<!-- Home Page body section start -->
  <!--Main Navigation-->
  <header>
    <!-- Top Navbar section inculde -->
    <%- partial('../layouts/admin/top-navbar') %>
    <!-- Top Navbar section inculde -->

    <!-- Top Navbar section inculde -->
    <%- partial('../layouts/admin/side-navbar') %>
    <!-- Top Navbar section inculde -->
  </header>
  <!--Main Navigation-->

  <!--Main layout-->
  <main class="mt-5">
    <div class="container pt-4">
      <!--Section: Sales Performance KPIs-->
      <section class="pt-3">
        <div class="card">
          <div class="card-header fw-bold">Manage Profile</div>
          <div class="card-body">
            <div class="d-flex justify-content-center">
              <div class="profile-image-box border shadow-1-strong">
                  <img 
                    src="<%=getImage(user.avtar)%>" 
                    class="profile-image" alt="avatars" 
                    loading="lazy" 
                  />
                  <div class="profile-image-box-action-button">
                    <i class="fa-solid fa-upload px-1 pointer text-light"></i>
                    <i class="fa-solid fa-trash px-1 pointer text-danger"></i>
                  </div>
              </div>
            </div>
            <!-- Basic info update section -->
            <div class="my-3">
              <div class="row justify-content-center">
                <div class="col-md-8">
                  <p class="fw-bold text-decoration-underline"> Basic Infomartion</p>
                  <form class="row">
                      <div class="col-xs-12 col-sm-6 mb-2">
                        <div data-mdb-input-init class="form-outline">
                          <input type="text" name="user_first_name" id="user_first_name" class="form-control" value="<%=user.name%>"/>
                          <label class="form-label" for="user_first_name">First name</label>
                        </div>
                      </div>
                      <div class="col-xs-12 col-sm-6 mb-2">
                        <div data-mdb-input-init class="form-outline">
                          <input type="text" name="user_last_name" id="user_last_name" class="form-control" value="<%=user.name%>"/>
                          <label class="form-label" for="user_last_name">Last name</label>
                        </div>
                      </div>
                   
  
                    
                      <div class="col-xs-12 col-sm-6 mb-2">
                        <div data-mdb-input-init class="form-outline">
                          <input type="email" name="user_email" id="user_email" class="form-control" value="<%=user.email%>" disabled/>
                          <label class="form-label" for="user_email">Email</label>
                        </div>
                      </div>
                  
                      <div class="col-xs-12 col-sm-6 mb-2">
                        <div data-mdb-input-init class="form-outline">
                          <input type="number" name="user_phone" id="user_phone" class="form-control" value="<%=user.phone%>"/>
                          <label class="form-label" for="user_phone">Phone</label>
                        </div>
                      </div>
                   
                      <div class="col mb-2">
                        <div data-mdb-input-init class="form-outline">
                          <textarea class="form-control" name="user_about" id="user_about" rows="2"></textarea>
                          <label class="form-label" for="user_about">About</label>
                        </div>
                      </div>
  
                      <div class="text-end">
                        <button type="button" class="btn btn-sm bg-theme text-light" data-mdb-ripple-init>Save</button>
                      </div>
                  </form>
                </div>
              </div>
            </div>
  
            <!-- password update section -->
            <div class="my-3">
              <div class="row justify-content-center">
                <div class="col-md-8">
                  <p class="fw-bold text-decoration-underline">Password Update</p>
                  <form>
                    <div class="row mb-2">
                      <div class="col-xs-12 col-sm-6 mb-2">
                        <div data-mdb-input-init class="form-outline">
                          <i class="fas fa-eye trailing pointer pe-auto show_password" data-id="password"></i>
                          <input type="password" name="password" id="password" class="form-control form-icon-trailing" required />
                          <label class="form-label" for="password">New Password</label>
                        </div>
                      </div>
                      <div class="col-xs-12 col-sm-6 mb-2">
                        <div data-mdb-input-init class="form-outline">
                          <i class="fas fa-eye trailing pointer pe-auto show_password" data-id="confirm_password"></i>
                          <input type="text" name="confirm_password" id="confirm_password" class="form-control form-icon-trailing" required/>
                          <label class="form-label" for="confirm_password">Confirm Password</label>
                        </div>
                      </div>
                    </div>
  
                    <div class="text-end">
                      <button type="button" class="btn btn-sm bg-theme text-light" data-mdb-ripple-init>Update</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <!--Section: Statistics with subtitles-->
    </div>
  </main>
  <!--Main layout-->
<!-- Home Page body section end -->




